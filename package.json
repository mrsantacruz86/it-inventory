{
  "name": "it-inventory",
  "version": "1.0.0",
  "description": "IT inventory database API",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node dist/index.js",
    "start:dev": "concurrently \"nodemon --exec babel-node src/index.js --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm start",
    "dev": "nodemon --exec babel-node src/index.js",
    "test": "test.js",
    "build": "babel src -d dist && cd client && npm build",
    "lint": "eslint --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrsantacruz86/it-inventory.git"
  },
  "keywords": [
    "MERN",
    "API",
    "REST",
    "inventory",
    "mongo",
    "express"
  ],
  "author": "Nelson Diaz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrsantacruz86/it-inventory/issues"
  },
  "homepage": "https://github.com/mrsantacruz86/it-inventory#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "helmet": "^5.1.0",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/node": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "npm run lint",
      "prettier --write"
    ]
  }
}
